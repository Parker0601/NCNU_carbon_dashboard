{{#> 
    layouts/main 
    title="專案總覽 Dashboard" 
    pagename="boss_dashboard"
    heading="專案總覽"
    category_1="老闆專區"
    pagedescription="快速掌握碳匯專案進度、效益與分布"
}}

{{#*inline "head-block"}}
<link rel="stylesheet" media="screen, print" href="css/statistics/chartjs/chartjs.css">
<link rel="stylesheet" media="screen, print" href="css/vendors.bundle.css"/>
<link rel="stylesheet" media="screen, print" href="css/app.bundle.css"/>
<style>
  .dashboard-section { margin-bottom: 2.5rem; }
  .risk-scroll {
    overflow-x: auto;
    white-space: nowrap;
    padding-bottom: 0.5rem;
  }
  .risk-card {
    display: inline-block;
    min-width: 320px;
    max-width: 340px;
    margin-right: 1.5rem;
    border-radius: 18px;
    box-shadow: 0 4px 18px rgba(33,150,243,0.10);
    background: linear-gradient(120deg, #e3f2fd 60%, #fff 100%);
    padding: 2rem 1.5rem 1.5rem 1.5rem;
    transition: box-shadow 0.2s, transform 0.2s;
    cursor: pointer;
    font-size: 1.18rem;
    font-weight: 500;
    position: relative;
  }
  .risk-card:last-child { margin-right: 0; }
  .risk-card:hover {
    box-shadow: 0 8px 32px rgba(33,150,243,0.18);
    transform: translateY(-2px) scale(1.04);
  }
  .risk-icon {
    font-size: 2.2rem;
    border-radius: 50%;
    width: 54px; height: 54px;
    display: flex; align-items: center; justify-content: center;
    margin-bottom: 0.7rem;
  }
  .risk-high { background: #dc3545; color: #fff; }
  .risk-medium { background: #ffc241; color: #333; }
  .risk-low { background: #4caf50; color: #fff; }
  .risk-label { position: absolute; top: 1.2rem; right: 1.2rem; font-size: 0.95rem; padding: 0.3em 0.8em; border-radius: 10px; }
  .panel {
    border-radius: 18px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.07);
    background: #fff;
  }
  .panel-hdr h2 { font-size: 1.35rem; font-weight: 700; letter-spacing: 1px; }
  .panel-hdr i { margin-right: 0.5rem; color: #2196f3; }
  .panel-content { font-size: 1.08rem; }
  /* 讓卡片可以換行 */
  .finance-metrics {
    display: flex;
    flex-wrap: wrap;    /* ← 關鍵 */
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }
  /* 四張卡片各佔 25% 減去 gap，避免被撐得過長 */
  .finance-metric-card {
    flex: 0 1 calc(25% - 1.125rem);
    max-width: calc(25% - 1.125rem);
  }
  /* 小螢幕下兩列顯示 */
  @media (max-width: 992px) {
    .finance-metric-card {
      flex: 0 1 calc(50% - 1.125rem);
      max-width: calc(50% - 1.125rem);
    }
  }
  /* 超小螢幕下單列顯示 */
  @media (max-width: 576px) {
    .finance-metric-card {
      flex: 0 1 100%;
      max-width: 100%;
    }
  }

  /* 強制 Chart 保持固定高度 */
  #financeChart {
    height: 320px !important;
    max-height: 320px !important;
  }
  .finance-metric-value { font-size: 2.1rem; font-weight: bold; color: #2196f3; }
  .finance-metric-label { font-size: 1.05rem; color: #666; }
  .info-flow-card {
    border-radius: 14px;
    box-shadow: 0 2px 8px rgba(33,150,243,0.07);
    background: #f8f9fa;
    margin-bottom: 1.2rem;
    padding: 1.2rem 1rem;
  }
  .info-flow-title { font-size: 1.1rem; font-weight: 600; margin-bottom: 0.7rem; display: flex; align-items: center; }
  .info-flow-title i { margin-right: 0.5rem; color: #2196f3; }
  .list-group-item { border-radius: 8px !important; margin-bottom: 0.5rem; border: none; box-shadow: 0 1px 4px rgba(33,150,243,0.04); }
  .badge { font-size: 0.95rem; padding: 0.5em 0.9em; border-radius: 12px; }
  .badge-warning { background: #ffc241; color: #333; }
  .badge-success { background: #4caf50; color: #fff; }
  .badge-danger { background: #dc3545; color: #fff; }
  @media (max-width: 991px) {
    .col-lg-8, .col-lg-4 { flex: 0 0 100%; max-width: 100%; }
    .panel { margin-bottom: 1.5rem; }
    .finance-metrics { flex-direction: column; gap: 1rem; }
    .risk-card { min-width: 90vw; }
  }
</style>
{{/inline}}

{{#*inline "content-block"}}
<!-- 風險小卡（橫向可滑動） -->
<div class="row dashboard-section">
  <div class="col-12">
    <div class="panel">
      <div class="panel-hdr"><h2><i class="fal fa-exclamation-triangle"></i>風險總覽</h2></div>
      <div class="panel-container show">
        <div class="panel-content risk-scroll">
          <div class="risk-card">
            <span class="risk-icon risk-high"><i class="fal fa-bolt"></i></span>
            氣候異常預警
            <span class="risk-label risk-high">高風險</span>
          </div>
          <div class="risk-card">
            <span class="risk-icon risk-medium"><i class="fal fa-chart-line"></i></span>
            碳市場價格劇烈波動
            <span class="risk-label risk-medium">中風險</span>
          </div>
          <div class="risk-card">
            <span class="risk-icon risk-high"><i class="fal fa-file-exclamation"></i></span>
            專案驗證逾期
            <span class="risk-label risk-high">高風險</span>
          </div>
          <div class="risk-card">
            <span class="risk-icon risk-low"><i class="fal fa-leaf"></i></span>
            碳匯效益低於預期
            <span class="risk-label risk-low">低風險</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row dashboard-section">
  <!-- 財務績效（左2/3） -->
  <div class="col-lg-8">
    <div class="panel">
      <div class="panel-hdr"><h2><i class="fal fa-coins"></i>財務績效</h2></div>
      <div class="panel-container show">
        <div class="panel-content">
          <div class="finance-metrics">
            <div class="finance-metric-card">
              <div class="finance-metric-value">47.34%</div>
              <div class="finance-metric-label">資產負債率</div>
            </div>
            <div class="finance-metric-card">
              <div class="finance-metric-value">63.98%</div>
              <div class="finance-metric-label">銷售淨利率</div>
            </div>
            <div class="finance-metric-card">
              <div class="finance-metric-value">74.29%</div>
              <div class="finance-metric-label">毛利率</div>
            </div>
            <div class="finance-metric-card">
              <div class="finance-metric-value">73.81%</div>
              <div class="finance-metric-label">主營業務利潤率</div>
            </div>
          </div>
          <canvas id="financeChart" style="height:320px;"></canvas>
        </div>
      </div>
    </div>
  </div>
  <!-- 右側1/3：資訊流區塊 -->
  <div class="col-lg-4 d-flex flex-column">
    <div class="info-flow-card">
      <div class="info-flow-title"><i class="fal fa-user-shield"></i>交易授權處理</div>
      <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          授權賣單：TCX-2024-01 <span class="badge badge-warning">待審核</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          授權買單：TCX-2024-02 <span class="badge badge-success">已通過</span>
        </li>
      </ul>
    </div>
    <div class="info-flow-card">
      <div class="info-flow-title"><i class="fal fa-check-circle"></i>最新驗證進度追蹤</div>
      <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          專案A：審核中 <span class="badge badge-warning">進行中</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          專案B：核發完成 <span class="badge badge-success">完成</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          專案C：逾期 <span class="badge badge-danger">逾期</span>
        </li>
      </ul>
    </div>
  </div>
</div>
{{/inline}}

{{#*inline "scripts-block"}}
<script src="/js/vendors.bundle.js"></script>
<script src="/js/app.bundle.js"></script>
<script src="js/statistics/chartjs/chartjs.bundle.js"></script>
<script>
$(document).ready(function() {
  var ctx = document.getElementById('financeChart').getContext('2d');
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['資產負債率', '銷售淨利率', '毛利率', '主營業務利潤率'],
      datasets: [{
        label: '比率(%)',
        data: [47.34, 63.98, 74.29, 73.81],
        backgroundColor: ['#2196f3', '#fd3995', '#ffc241', '#4caf50']
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      scales: {
        xAxes: [{
          barPercentage: 0.5,        // 柱子佔每個 category 的 50%
          categoryPercentage: 0.5,   // category 佔整個軸的 50%
          maxBarThickness: 40,       // 最粗不超過 40px
          gridLines: { display: false }
        }],
        yAxes: [{
          ticks: {
            beginAtZero: true,
            max: 100
          }
        }]
      }
    }
  });
});
</script>
{{/inline}}

